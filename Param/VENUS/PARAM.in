!- PARAM.in:  Example input file for BATSRUS --

#NORMALIZATION
SOLARWIND		TypeNormalization

#VERBOSE
1			lVerbose

#PLANET
VENUS			NamePlanet

#ROTATION
F			UseRotation

#GRAVITY
T			UseGravity
0			iDirGravity

#INCLUDE
Param/VENUS/Grid

#GRIDLEVEL
2			nLevel
initial			StringShape

! The denisities are overwritten in the Venus ModUser file
#BODY
T			UseBody
1.0231328486450759		rBody
1.0			rCurrents
1.0e6			BodyNDim Hp
1.0e6			BodyNDim CO2p
1.0e6			BodyNDim O2p
1.0e6			BodyNDim Op
300.0			BodyTDim

#TIMEACCURATE
F			IsTimeAccurate

#TIMESTEPPING
2			nStage
0.2			CflExpl

#USERSWITCH
+init +ic +source		StringSwitch

#TEST
read_inputs amr		StringTest
update_states calc_sources calc_facefluxes calc_timestep

#TESTXYZ
0.6672			xTest		(X coordinate of cell for testing)
-0.7864  		yTest		(Y coordinate of cell for testing)
-0.0169			zTest		(Z coordinate of cell for testing)

#TESTVAR
Rho			NameTestVar

! Index of variable to be tested. Default is rho_=1, ie. density.

#SAVELOGFILE
T			DoSaveLogfile rest of parameters read if true
VAR step		StringLog
1			DnSaveLogfile
-1.			DtSaveLogfile [sec]
dt pmin pmax rho p hpflx opflx o2pflx co2pflx		NameLogVars
3.0 5.0			StringLogRadii

#BOXBOUNDARY
outflow			TypeBc1
inflow			TypeBc2
fixed			TypeBc3
fixed			TypeBc4
fixed			TypeBc5
fixed			TypeBc6

#INNERBOUNDARY
user			TypeBcBody

#MULTISPECIES
T			DoReplaceDensity
5.0			SpeciesPercentCheck

#SOLARWIND
14.0			SwNDim [n/cc]    \
2.703E5			SwTDim [K]          |
-400.0			SwUxDim [km/s]      |
0.0			SwUyDim [km/s]      |
0.0			SwUzDim [km/s]      |
0.0			SwBxDim [nT]        |
15.0			SwByDim [nT]        !15 nT parker spiral
0.0			SwBzDim [nT]       /

#SAVERESTART
F			DoSaveRestart

#SAVEPLOT
5			nPlotFile
z=0 MHD tec		StringPlot
1000			DnSavePlot
-1.0			DtSavePlot
y=0 MHD tec		StringPlot
1000			DnSavePlot
-1.0			DtSavePlot
x=0 MHD idl		StringPlot
1000			DnSavePlot
-1.0			DtSavePlot
-1.0			DxSavePlot
y=0 MHD idl		StringPlot
1000			DnSavePlot
-1.0			DtSavePlot
-1.0			DxSavePlot
z=0 MHD idl		StringPlot
1000			DnSavePlot
-1.0			DtSavePlot
-1.0			DxSavePlot

#SCHEME
2			nOrder (1 or 2)
Linde			TypeFlux  1=Roe, 2=Rusanov, 3=Linde
mc			TypeLimiter ! Only for nordder=2
1.2			LimiterBeta

#NONCONSERVATIVE
T			UseNonConservative

#CONSERVATIVECRITERIA
1			nConservCrit
r			TypeConservCrit
6.			rConserv

#STOP
50			MaxIteration
-1.0			tSimulationMax

#END
